<%- include('navbar.ejs')%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Profile</title>
</head>
<body>
    <div class="pfForm">
        <div>
            <img src="images/<%= profileImage%>" alt="Profile Image" style="width: 150px;">
            <br>
            First Name: <em><%= firstname%></em>
            <br>
            Last Name:<em><%= lastname%></em>
            <br>
            Email Address: <em><%= email%></em>
            <br>   
            <br> 
        </div>

        <form action="/profile" method="post" enctype="multipart/form-data">
            <label for="fName">First Name</label>
            <input type="text" name="firstname" id="fName">
            <br>
            <label for="lName">Last Name</label>
            <input type="text" name="lastname" id="lName">
            <br>
            <label for="email">Email Address</label>
            <input type="text" name="emailAdress" id="email">
            <br>
            <br>
            <input type="file" name="pfImage" required>
            <br>
            <br>
            <input type="submit" value="Update">
        </form>
    </div>
    
</body>
</html>